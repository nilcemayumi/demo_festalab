<p style="color: green"><%= notice %></p>
<div class="center-container">
  <div class="user-card">
    <%= render @user %>

    <div class=" container text-center">
      <div class="row justify-content-end">
        <div class="col">
          <%= link_to "Editar", edit_user_path(@user), class: "btn btn-primary" %>
        </div>
        <div class="col">
          <%= button_to "Deletar", @user, method: :delete , class: "btn btn-danger"%>
        </div>
      </div>
      <div class="mt-2">
        <%= link_to "<< Voltar para lista", users_path, class: "link" %>
      </div>
    </div>
  </div>
</div>
